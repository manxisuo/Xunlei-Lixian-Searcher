{
    "manifest_version": 2,

    "name": "迅雷离线空间搜索器",
    "description": "搜索迅雷离线空间中的文件",
    "version": "0.0.1",

    "content_scripts": [{
        "matches": ["http://dynamic.cloud.vip.xunlei.com/user_task?userid=*"],
        "css": ["css/main.css"],
        "js": ["js/lib/jquery-2.2.4.min.js", "js/lib/fuzzy-search.min.js", "js/content_script.js"]
    }],

    "permissions": [
        "http://*.xunlei.com/*"
    ],

    "icons": {
        "48": "icon/48.png",
        "128": "icon/128.png"
    }
}
